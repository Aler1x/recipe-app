{
  "expo": {
    "name": "recipe-app",
    "slug": "recipe-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "your.app",
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/TurbotaBook.ttf",
            "./assets/fonts/TurbotaBoldItalic.ttf",
            "./assets/fonts/TurbotaBold.ttf",
            "./assets/fonts/TurbotaBookItalic.ttf",
            "./assets/fonts/TurbotaHeavy.ttf"
          ]
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#507D94"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
